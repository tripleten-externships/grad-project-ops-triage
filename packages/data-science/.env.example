# Data Science Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true

# Model Configuration
MODEL_VERSION=1.0.0
MODEL_PATH=./models
CONFIDENCE_THRESHOLD=0.6

# Data Source
DATA_SOURCE_URL=http://localhost:3000/api/requests
# Or use local files for development
USE_LOCAL_DATA=true
LOCAL_DATA_PATH=../../contracts/mock-data

# Backend Integration
BACKEND_API_URL=http://localhost:3000
BACKEND_API_KEY=your-api-key-here

# Model Training
TRAIN_TEST_SPLIT=0.2
RANDOM_SEED=42
MAX_FEATURES=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ds-api.log

# Optional: External Services
# OPENAI_API_KEY=your-key-here  # If using embeddings from OpenAI
# HUGGINGFACE_TOKEN=your-token  # If using HuggingFace models

